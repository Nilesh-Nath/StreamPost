@{
    ViewData["Title"] = "Search";
}
<section class="container mt-4">
    <div id="category-main" class="row">
        <div class="col-lg-8 col-md-7 col-sm-12">
            <h1 class="fw-bold text-dark">Filtered Results</h1>
            <div class="mt-5">
                @foreach (var post in Model.Posts)
                {
                        <article class="post-card mb-5 p-3 rounded">
                        @if (!string.IsNullOrEmpty(post.FeaturedImage))
                        {
                                    <img src="@post.FeaturedImage" alt="Post Image" class="img-fluid rounded mb-3" />
                        }
                            <h2 class="text-dark fw-bold mb-2">@post.Title</h2>
                            <div class="text-muted mb-3">
                                <span class="me-2">@post.Category.CategoryName</span> /
                                <span>@post.User.UserName</span>
                            </div>

                            <div>
                                <a asp-action="PostDetails" asp-controller="Home" asp-route-id="@post.PostID" class="text-decoration-none text-muted hover-effect">
                                    Read More »
                                </a>
                            </div>
                        </article>
                }
            </div>
        </div>
        <div class="col-lg-4 col-md-5 col-sm-12">
            <div class="sidebar-card p-3 rounded mb-4">
                <h4 class="fw-bold text-dark mb-3">Categories</h4>
                <div class="d-flex flex-column mt-3">
                    @foreach (var category in Model.categories)
                    {
                            <div class="mb-2">
                                <a asp-action="Category" asp-controller="Category" asp-route-id="@category.CategoryID" class="text-dark text-decoration-none hover-effect">
                                @category.CategoryName 
                                </a>
                            </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .hover-effect:hover {
        transition: all .4s ease-in-out !important;
        color: mediumpurple !important;
    }

    .subscribe-btn {
        background-color: mediumpurple !important;
        transition: all .4s ease-in-out !important;
    }

        .subscribe-btn:hover {
            background-color: #6a5acd !important;
        }

    h1 {
        font-size: 2.5rem;
    }

    h2 {
        font-size: 1.75rem;
    }

    h4 {
        font-size: 1.5rem;
    }

    .mb-5 {
        margin-bottom: 2.5rem !important;
    }

    .post-card {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #fff;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        margin-bottom: 30px;
        border: none;
        display: block;
        width: 100%;
    }

        .post-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        }

    .sidebar-card {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #fff;
    }

    body {
        background-color: #f7f7f7;
    }


</style>
