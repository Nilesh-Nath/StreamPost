@model StreamPost.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
    ViewData["ShowHeaderFooter"] = false;
}

<section class="d-flex align-items-center justify-content-center p-4">
    <div class="container">
        <div class="row d-flex align-items-center justify-content-center">
            <!-- Logo Section -->
            <div class="col-lg-5 col-md-6 d-flex justify-content-center mb-4 mb-md-0">
                <img src="~/images/logo.png" class="img-fluid" style="max-width: 80%; height: auto;" />
            </div>

            <!-- Login Form Section -->
            <div class="col-lg-5 col-md-6 text-black">
                <div class="d-flex flex-column align-items-center">
                    <form asp-action="Login" asp-controller="Login" class="w-100 px-4" style="max-width: 500px;">
                        @Html.AntiForgeryToken()
                        <h3 class="fw-normal mb-4 text-center" style="letter-spacing: 1px;">Log in</h3>

                        <!-- Email Input -->
                        <div class="form-outline mb-4">
                            <label class="form-label" for="Email">Email address</label>
                            <input type="email" asp-for="Email" class="form-control form-control-lg" required placeholder="Enter your email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- Password Input -->
                        <div class="form-outline mb-4">
                            <label class="form-label" for="Password">Password</label>
                            <div class="input-group">
                                <input id="loginPassword" type="password" asp-for="Password" class="form-control form-control-lg" required placeholder="Enter your password" />
                                <button id="loginPasswordToggle" class="btn btn-outline-secondary" type="button">
                                    <i class="bi bi-eye-slash-fill"></i>
                                </button>
                            </div>

                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <!-- Remember Me -->
                        <div class="form-outline mb-4">
                            <input type="checkbox" asp-for="RememberMe" />
                            <label class="form-label" for="RememberMe">Remember Me</label>
                        </div>
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <!-- Login Button -->
                        <div class="pt-1 mb-4 text-center">
                            <button class="btn btn-info btn-lg btn-block w-100" type="submit">Login</button>
                        </div>

                        <!-- Forgot Password -->
                        <p class="small mb-3 text-center">
                            <a class="text-muted" href="#">Forgot password?</a>
                        </p>

                        <!-- Register Link -->
                        <p class="text-center">
                            Don't have an account?
                            <a asp-controller="Signup" asp-action="Signup" class="link-info">Register here</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Custom CSS for centering and smaller font -->
<style>
    section {
        min-height: 90vh;
    }

    input.form-control-lg {
        font-size: 0.85rem;
    }

    ::placeholder {
        font-size: 0.85rem; 
        color: #6c757d;
    }
</style>

<script>
    $(document).ready(function(){
        document.getElementById("loginPasswordToggle").addEventListener("click", function () {
        let passwordInput = document.getElementById("loginPassword");
        let toggleIcon = this.querySelector("i");

        if (passwordInput.type === "password") {
            passwordInput.type = "text";
            toggleIcon.classList.replace("bi-eye-slash-fill", "bi-eye-fill");
        } else {
            passwordInput.type = "password";
            toggleIcon.classList.replace("bi-eye-fill", "bi-eye-slash-fill");
        }
    });

    });
</script>